doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/app.css")
    body.min-hscreen
        div
            header
                .w-40
                    img.object-cover(src=`${img}`, alt="Logo")
                h1.text-xl.font-bold.mt-4 Flexxus S.A. 
                p.text-sm.py-2 Humberto Primo 843 - Cordoba Capital
                .flex.items-center.justify-between.border-b-2
                    p.text-sm.mb-2 Tel: 0351-5685000
                    p.mb-2 Fecha: 22/02/2023
                h2.mt-4.font-bold.text-xl Listado de Deuda en Cuenta Corriente
                main
                    p.py-2 Cliente: #{client[0].RAZONSOCIAL} 
                    h3.mt-5 Detalle
                    .overflow-auto.rounded-md.mt-5.border.border-zinc-200
                        table.w-full
                            thead.text-zinc-800
                                tr.border-b
                                    th.p-2.text-xs.font-bold.tracking-wide.text-left Tipo
                                    th.p-2.text-xs.font-bold.tracking-wide.text-left Numero
                                    th.p-2.text-xs.font-bold.tracking-wide.text-left Fecha Comp.
                                    th.p-2.text-xs.font-bold.tracking-wide.text-left Fecha Vto.
                                    th.p-2.text-xs.font-bold.tracking-wide.text-left Total
                                    th.p-2.text-xs.font-bold.tracking-wide.text-left Pagado
                                    th.p-2.text-xs.font-bold.tracking-wide.text-left Saldo
                            tbody.divide-y
                                each val in client
                                    tr
                                        td.p-2.text-xs.text-gray-700 #{val.TIPOCOMPROBANTE}
                                        td.p-2.text-xs.text-gray-700 #{val.NUMEROCOMPROBANTE}
                                        td(class="p-2 text-xs text-gray-700")= formatDate(val.FECHACOMPROBANTE)
                                        td(class="p-2 text-xs text-gray-700")= formatDate(val.FECHAVENCIMIENTO)
                                        td.p-2.text-xs.text-gray-700 #{val.TOTAL}
                                        td.p-2.text-xs.text-gray-700 #{val.PAGADO}
                                        td.p-2.text-xs.text-gray-700 #{val.SALDO}